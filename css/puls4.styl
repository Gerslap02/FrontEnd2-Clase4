gris_obscuro = #444
gris_texto = #7A7A7A
azul = #22BCE0
naranja = #DD4F24

@font-face {
	font-family: 'iconos';
	src:url('../fonts/icomoon.eot');
	src:url('../fonts/icomoon.eot?#iefix') format('embedded-opentype'),
		url('../fonts/icomoon.woff') format('woff'),
		url('../fonts/icomoon.ttf') format('truetype'),
		url('../fonts/icomoon.svg#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;
}
[class^="icon-"], [class*=" icon-"] {
	font-family: 'iconos';
	speak: none;
	font-style: normal;
	font-weight: normal;
	font-variant: normal;
	text-transform: none;
	line-height: 1;

	/* Better Font Rendering =========== */
	-webkit-font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale;
}

a
	color naranja 
body
	background #E8E8E8
	color gris_obscuro
	font-family Arial
	font-size 16px

footer
	background naranja
	color rgba(white, 0.5)
	padding 1em 0
	text-align center
	width 100%

	h3
		font-size 14px
		font-weight normal

		strong
			display block

		.mejor
			&:before
			&:after
				content " - "

form
	padding 0.8em
	display none

	label 
		display inline-block
		width 60px
header
	background gris_obscuro
	box-shadow 0 5px 0 rgba(0,0,0,0.2)
	color white
	overflow hidden
	padding 0.5em
	position relative
	z-index 2

	.logo
		border-right 1px solid azul
		width 60px
		float left
		img
			width 52px

	.titular
		margin 0 80px 0 70px
		.filtro
			color azul
			font-size 14px
			font-style italic
			font-weight bold
			text-decoration none

		.publicar
			background naranja
			color white
			float right
			font-style italic
			padding 0.2em 0.5em
			text-decoration none
			text-shadow 1px 1px 0px black

			&:before
					font-family "iconos"
					content "\e600"
					display inline-block
					margin 0 3px 0 0
					text-shadow 1px 1px 0px black


			
		.titulo
			font-size 18px
			font-weight normal
			margin 0
			padding 0

	.usuario
		position absolute
		right 10px
		top 10px
		.avatar
			margin 0 1em 0 0
			position relative
			z-index 69

			img
				border-radius 50px
				width 50px
		.flechita
			
			background naranja
			color white
			display block
			padding 2px
			position absolute
			right 0
			text-align right
			text-decoration none
			top 15px
			width 50%

			&:after
					font-family "iconos"
					content "\e602"
					display block
					margin 1px 0 0 1px
					font-size 1..5em
					text-shadow 1px 1px 0px black

nav
	background azul
	border-left 15px solid white
	position relative

	&:before
		border-bottom 20px solid transparent
		border-left 10px solid white
		border-top 20px solid transparent
		content ""
		left 0
		position absolute
		top 0


	.menu
		height 40px
		line-height 40px
		margin 0
		padding 0
		overflow-x auto
		white-space nowrap

		&::-webkit-scrollbar
			display none


		li 
			display inline-block

			a
				
				color white
				display block
				margin 0 0.5em
				padding 0 0.2em 
				text-decoration none

				&:hover
					background rgba(black,0.1)

.posts
	padding 0.5em

	.post
		background white
		border-radius 0 0 0.5em 0.5em
		box-shadow 2px 2px 10px rgba(black, 0.5)
		color gris_texto
		margin-bottom 0.5em

		.acciones
			border-top 3px solid azul
			padding 0.5em
			overflow hidden

			.datos
				float right

				.comentarios
					background gris_obscuro
					border-radius 3px
					margin 0 1em 0 0
					color white
					padding 2px 5px
					text-decoration none

				.estrellita
					text-decoration none

					&:after
						font-family "iconos"
						content "\e601"
						color #FCB92D
						font-size 1.1em
						
						

			.votos
				float left

				.up
				.down
					text-decoration none
					&:before
						font-family "iconos"
						font-size 1.5em
						vertical-align middle

				.up 
					color green
					&:before
						content "\e603"
						

					
				.down
					color red
					&:before						
						content "\e602"


					



				


		.descripcion
			
			.detalles
				height 160px
				margin-left 130px

				.autor
					margin 0.5em 0 2em 0

				.fecha
					float right
					margin 0 1em 0 0

				.tag
					background azul
					border-radius 0.5em
					color white
					padding 0.2em 0.5em
					text-decoration none
				

				.titulo
					color gris_obscuro
					font-size 18px
					font-style italic
					margin 0 
					padding 0.5em 0.5em 0 0

			
			.imagen
				float left	

				img
					
					height 160px
					width 120px
					vertical-align top	


@media screen and (min-width: 768px)

	header
		.titular
			.publicar				
				font-size 1.1em
				padding-left 3em
				position relative
				&:before
					left 0
					font-size 2.5em
					position absolute
					top -10px
	
	.posts
		.post
			display inline-block
			width 48%
			vertical-align top
			&:nth-child(odd)
				margin-right 1%
